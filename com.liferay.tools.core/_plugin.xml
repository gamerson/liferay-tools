<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.5"?>
<plugin>

	<extension
		point="org.eclipse.core.resources.natures"
		id="com.liferay.tools.core.nature"
		name="Liferay Tools Nature">
		<runtime>
			<run class="com.liferay.tools.core.LiferayToolsNature" />
		</runtime>
		<requires-nature id="org.eclipse.jdt.core.javanature" />
		<builder id="com.liferay.tools.core.builder" />
	</extension>

	<extension
		point="org.eclipse.core.resources.builders"
		id="com.liferay.tools.core.builder"
		name="Liferay Tools Builder" >
		<builder callOnEmptyDelta="true" hasNature="true">
			<run class="com.liferay.tools.core.builder.LiferayToolsBuilder" />
		</builder>
	</extension>


	<extension
		point="org.eclipse.core.resources.markers"
		id="sfproblem"
		name="Liferay Source Formatter Problem Marker"
		>
		<persistent value="true"/>
		<super type="org.eclipse.core.resources.problemmarker"/>
		<super type="org.eclipse.core.resources.textmarker"/>
	</extension>

</plugin>